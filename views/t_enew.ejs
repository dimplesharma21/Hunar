                                <!-- Form -->
                                    <h4> Job Details </h4>

                                    <form method="post" action="/employers/<%= jo %>/jobs/new">
                                        <div class="row uniform">
                                            
                                            <div class="6u 12u$(xsmall)">
                                                <input type="text" name="jobtitle" placeholder="Job Title" />
                                            </div>

                                            <div class="6u 12u$(xsmall)">
                                                <div class="select-wrapper">
                                                    <select name="jobtype">
                                                        <option value="">Job Type</option>
                                                        <option value="Full Time">Full Time Job</option>
                                                        <option value="Seasonal">Seasonal</option>                                  
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="12u 12u$(xsmall)">
                                                <div class="select-wrapper">
                                                    <select name="jobcategory" id="jobcategory">
                                                        <option value="">Select Industry Type</option>
                                                        <option value="Hotel">Hotel</option>
                                                        <option value="Computer (Corporate/IT)">Computer (Corporate/IT)</option>
                                                        <option value="Hospital">Hospital</option>
                                                        <option value="Municipal Corportaion">Municipal Corportaion</option>    
                                                        <option value="Education">Education</option>
                                                        <option value="Research">Research</option>
                                                        <option value="Sports">Sports</option>
                                                        <option value="Sanitation">Sanitation</option>
                                                        <option value="Food">Food</option>
                                                        <option value="Financial/Consultancy">Financial/Consultancy</option>
                                                        <option value="Aviation">Aviation</option>
                                                        <option value="Railways">Railways</option>
                                                        <option value="Textile">Textile</option>
                                                        <option value="Agriculture">Agriculture</option>
                                                        <option value="Automobile">Automobile</option>
                                                        <option value="Paper">Paper</option>
                                                        <option value="Event Management">Event Management</option>
                                                        <option value="Art and Creativity">Art and Creativity</option>            
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="12u 12u$(xsmall)">
                                                <div class="select-wrapper">
                                                    <select name="jobsector">
                                                        <option value="">Job Type</option>
                                                        <option value="Government">Government</option>
                                                        <option value="Public Sector Units (PSUs)">Public Sector Units (PSUs)</option>
                                                        <option value="Private">Private</option>
                                                                
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="12u 12u$(xsmall)">
                                                <input type="text" name="location" placeholder="Write in format- City, India" />
                                            </div>

                                            <div class="6u 12u$(xsmall)">
                                                <label>Job Start Date :
                                                <input type="date" name="startdate" placeholder="Start Date (dd/mm/yyyy)" />
                                                </label>
                                            </div>

                                            <div class="6u 12u$(xsmall)">
                                                <label>Job End Date :
                                                <input type="date" name="enddate" placeholder="End Date (dd/mm/yyyy)" />
                                                </label>
                                            </div>


                                            <div class="6u 12u$(xsmall)">

                                                <label> Application Deadline Date :
                                                <input type="date" name="deadlinedate" placeholder="Application Deadline Date (dd/mm/yyyy)" />
                                                </label>
                                            </div>


                                            <div class="6u 12u$(xsmall)">
                                                <input type="number" name="positions" placeholder="Number of positions available" />
                                            </div>

                                            <div class="12u$">

                                            <hr>

                                            <h4 id="elements"> Responsibilities and Skills </h4>
                    
                                            </div>

                                            <div class="12u$">
                                                
                                                <textarea name="about" placeholder=" About The Job" rows="5"></textarea>
                                            </div>

                                            <div class="12u$">
                                                <input type="text" name="skillsrequired" placeholder="Skills Required By The Candidate" />
                                            </div>

                                            <div class="12u$">
                                                <textarea name="responsibilities" placeholder=" Responsibilities " rows="5"></textarea>
                                            </div>
                                      
                                            <div class="6u 12u$(xsmall)">
                                                <input type="number" name="minsalary" placeholder="Salary Range: Minimum Salary">
                                            </div>


                                            <div class="6u 12u$(xsmall)">
                                                <input type="number" name="maxsalary" placeholder="Salary Range: Maximum Salary">
                                            </div>
                                            
                                            <div class="12u$">

                                            <hr>
                                            <div class="6u$ 12u$(small)">
                                                <input type="checkbox" id="human" name="human" required>
                                                <label for="human">I agree to the terms and conditions.</label>
                                            </div>
                                            

                                            <div class="row uniform">
                                            
                                            <div class="6u$ 12u$(small)">
                                                <input type="submit" value="Submit" class="fit" style="margin-left: 20em" />
                                            </div>
                                        </div>
                                             
                                            
